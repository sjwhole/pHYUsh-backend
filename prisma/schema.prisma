generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lecture {
  suupNo         String  @id
  haksuNo        String
  gwamokNm       String
  daepyoGangsaNm String?
  hakjeom        Int
  suupTimes      String
  currentInwon   Int
  limitInwon     Int
  pushes         Push[]
}

model Push {
  id            Int     @id @default(autoincrement())
  Lecture       Lecture @relation(fields: [lectureSuupNo], references: [suupNo])
  lectureSuupNo String
  FCM           FCM     @relation(fields: [FCMId], references: [id])
  FCMId         String  @db.VarChar(255)

  @@unique([lectureSuupNo, FCMId], name: "pushIdentifier")
}

model FCM {
  id     String @id @db.VarChar(255)
  pushes Push[]
}
